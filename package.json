{
  "name": "brisca",
  "version": "0.0.0",
  "description": "",
  "main": "api/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build -- -w",
    "dist": "npm run build -- -fq",
    "test": "node test",
    "pretest": "npm run check",
    "watch": "node-dev",
    "watch:test": "npm run watch -- --respawn test",
    "check": "eslint 'api/**/*.js' 'app/**/*.{js,pug,svelte}'",
    "build": "mortero app -dcpublic:. -P/:3001 -Eecss.less -I.gitignore --platform browser"
  },
  "mortero": {
    "bundle": "app/*.js",
    "exclude": [
      "{lib,shared,components}"
    ],
    "rename": [
      "app/**:{filepath/1}",
      "**/!(index).html:{basedir}/{name}/index.html"
    ],
    "options": {
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "keywords": [
    "brisca",
    "cards",
    "game"
  ],
  "author": "Alvaro Cabrera <yo@soypache.co>",
  "license": "MIT",
  "devDependencies": {
    "@japa/expect": "^2.0.1",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "drizzle-kit": "^0.19.13",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-pug": "^1.2.3",
    "eslint-plugin-svelte3": "^3.2.0",
    "less": "^4.1.1",
    "less-plugin-autoprefix": "^2.0.0",
    "mortero": "^0.0.123",
    "node-dev": "^8.0.0",
    "partykit": "0.0.15",
    "pug": "^3.0.2",
    "svelte": "^3.59.2",
    "svelte-confetti": "=1.2.0",
    "testdouble": "^3.16.6"
  },
  "dependencies": {
    "@grown/conn": "^0.0.44",
    "@grown/router": "^0.0.21",
    "@grown/session": "^0.0.28",
    "@libsql/client": "^0.3.4",
    "drizzle-orm": "^0.28.6",
    "grown": "^1.4.23",
    "partysocket": "0.0.6",
    "therror": "^4.1.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.15.0"
  }
}
