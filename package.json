{
  "name": "decks",
  "version": "1.0.0",
  "description": "",
  "main": "api/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build -- -w",
    "dist": "npm run build -- -fq",
    "test": "node test",
    "pretest": "npm run check",
    "watch": "nodemon -w api -w app -w tests -x npm test",
    "check": "eslint 'api/**/*.js' 'app/**/*.{js,pug,svelte}'",
    "build": "mortero app -dcpublic:. -P/api:3001 -Eecss.less -I.gitignore --platform browser"
  },
  "mortero": {
    "bundle": "app/*.js",
    "exclude": [
      "{lib,shared,components}"
    ],
    "rename": [
      "app/**:{filepath/1}",
      "**/!(index).html:{basedir}/{name}/index.html"
    ],
    "options": {
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "keywords": [
    "brisca",
    "cards",
    "game"
  ],
  "author": "Alvaro Cabrera <yo@soypache.co>",
  "license": "MIT",
  "devDependencies": {
    "@japa/expect": "^2.0.1",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-pug": "^1.2.3",
    "eslint-plugin-svelte3": "^4.0.0",
    "less": "^4.1.1",
    "less-plugin-autoprefix": "^2.0.0",
    "live-server": "^1.2.2",
    "mortero": "^0.0.92",
    "pug": "^3.0.2",
    "svelte": "^3.49.0",
    "svelte-confetti": "^1.2.0",
    "testdouble": "^3.16.6"
  },
  "dependencies": {
    "@grown/conn": "^0.0.42",
    "@grown/model": "^0.0.54",
    "@grown/router": "^0.0.19",
    "@grown/session": "^0.0.27",
    "grown": "^1.4.4",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.15.0"
  }
}
